@model IEnumerable<Notify.Models.Pedido>

@{
    /**/

    ViewBag.Title = "Comandes";
}

<h2>Comandes</h2>
@if (TempData["Mensaje"] == null)
{

}
else
{ 
<div class="alert alert-success" role="alert">
    <strong>@TempData["Mensaje"]</strong>
</div>
}
<table class="table" id="tablaConBusqueda">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>

                @Html.ActionLink("Detalls de la comanda", "Index", "Lineas", new { id = item.id_pedido }, null) |
                @Html.ActionLink("Esborra", "Delete", new { id = item.id_pedido }, null)
            </td>
        </tr>
    }

</table>
<script type="text/javascript" src="~/Scripts/JavaScript.js"></script>

@Html.ActionLink("Torna", "Index", "Home")