@model IEnumerable<Notify.Models.Pedido>

@{
    ViewBag.Title = "Mis pedidos";
}

<h2>Mis pedidos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.ActionLink("Detalls", "Details", new { id=item.id_pedido }) |
            @Html.ActionLink("Esborra", "Delete", new { id=item.id_pedido })
        </td>
    </tr>
}

</table>
