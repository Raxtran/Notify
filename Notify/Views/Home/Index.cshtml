@{
    ViewBag.Title = "Notificat";
}

@if (Request.IsAuthenticated)
{
<div id="general">
    <div id="cont">
        <div id="prod" class="jumbotron">
            <h1>Demanar</h1>
            <img id="imagenes" src="~/iconmonstr-checkout-10-240.png" />
            <p></p>
        <!--Ya existe producto-->
            @if (ViewBag.pedidoDeHoy) {
                <button class="btn">@Html.ActionLink("Les meves comandes", "Index", "Pedidos", null, new { style = "color:black" })</button>
            } else {
                <button class="btn">@Html.ActionLink("Demanar", "Create", "Pedidos", null, new { style = "color:black" })</button>

            }</div>
    </div>
    @if (ViewBag.es_user_admin)  
    {
    <div id="cont">
        <div id="prod" class="jumbotron">
            <h1>Afegir</h1>
            <img id="imagenes" src="~/iconmonstr-plus-6-240.png" />
            <p></p>
            <button class="btn">@Html.ActionLink("Afegir productes", "Index", "Productos", null, new { style = "color:black" })</button>
        </div>
     </div>

    }
</div>

}
        else
        {
        <div id="anuncio" class="jumbotron">
            <h1>Benvingut a Notify</h1>
            <p class="lead">Des de aquesta aplicació podràs fer les teves comandes, comprova si la teva cantina escolar disposa d'aquest servei.</p>
            <p><a class="btn btn-primary btn-lg">Centres amb Notify&raquo;</a></p>
        </div>

        <div class="row">
            <div class="col-md-4">
                <img id="logodina"src="~/puntcat.png" />
            </div>
            <div class="col-md-4">
                <img id="logos"src="~/dinahosting.jpg" />
            </div>
            <div class="col-md-4">
                <h2>Contacto</h2>
                <p>@Html.ActionLink("Sobre nosotros", "About", "Home")</p>
            </div>

        </div>
        }
